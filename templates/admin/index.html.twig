{% extends "base.html.twig" %}
{% block body %}
<div class="container">
    {% for messages in app.flashes('success') %}
          <div class="alert alert-success">{{messages}}</div>
         {% endfor %}
    <div>
        <h1 class="mt-5 text-right">Regions du cameroun</h1>
        <hr>
        <table class="table table-striped">
         <thead>
           <tr>
             <th>Titres</th>
             <th coldspan="2">Actions</th>
           </tr>
         </thead>
         <tbody>
            {% for region in regions %}
             <tr>
               <td>{{region.nom}}</td>
               <td><a href="{{path('edit_region',{id: region.id})}}" class="btn btn-primary">editer</a></td>
               <td>
                 <form method="POST" action="{{path('delete',{id: region.id})}}">
                  <input type="hidden" name="_method" value="DELETE">
                  <input type="hidden" name="_token" value="{{csrf_token('delete' ~ region.id)}}">
                  <button class="btn btn-danger">supprimer</button>
                 </form>
               </td>
             </tr>
            {% endfor %}
         </tbody>
        </table>
        <div class="text-end">
         <a href="{{path('new_region')}}" class="btn btn-primary">creer une nouvelle regions</a>
        </div>
    </div>
    <div>
      <h1 class="mt-5 text-right">langue du cameroun</h1>
      <hr>
      <table class="table table-striped">
       <thead>
         <tr>
           <th>Titres</th>
           <th coldspan="2">Actions</th>
         </tr>
       </thead>
       <tbody>
          {% for langue in langues %}
           <tr>
             <td>{{langue.nom}}</td>
             <td><a href="{{path('edit_langue',{id: langue.id})}}" class="btn btn-primary">editer</a></td>
             <td>
               <form method="POST" action="{{path('delete',{id: langue.id})}}">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{csrf_token('delete' ~ langue.id)}}">
                <button class="btn btn-danger">supprimer</button>
               </form>
             </td>
           </tr>
          {% endfor %}
       </tbody>
      </table>
      <div class="text-end">
       <a href="{{path('new_langue')}}" class="btn btn-primary">creer une nouvelle langue</a>
      </div>
  </div>
  <div>
    <h1 class="mt-5 text-right">Cours de Camerlingo</h1>
    <hr>
    <table class="table table-striped">
