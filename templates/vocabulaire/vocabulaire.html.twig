{% extends 'base.html.twig' %}
{% block body %}
<div class="container mt-4">
    {% for mot in mots %}
    <div class="card" style="width: 18rem;">
        <div class="card-body ">
          <h5 class="card-title fs-1">{{mot.traduction}}</h5>
          <h4 class="card-subtitle mb-2 text-primary fw-bold">{{mot.mot}}</h4>
          <p class="card-text"></p>
          {% if mot.filename %}
            <audio controls class="w-100">
                <source src="/audio/properties/{{mot.filename}}" type="audio/mpeg">
                <p>
                    Votre navigateur ne prend pas en charge l'audio HTML5. Voici un
                    <a href="/audio/properties/{{mot.filename}}">lien vers le fichier audio</a> Ã  la place.
                  </p>
              </audio>
    {% endif %}
    
        </div>
      </div>
      {% endfor %}
</div>
{% endblock %}