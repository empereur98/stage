{% extends "base.html.twig" %}
{% block body %}
<h2>lesson:{{slug}}</h2>
<div class="row">
{% for lesson in lessons %}
  <div class="col-4">
    <div class="card w-100 d-inline-block">
      <div class="card-body">
        <h2 class="card-title">{{lesson.mot}}</h2>
        <p class="card-text"><small class="text-muted">{{lesson.traduction}}</small></p>
        <p class="card-text">{{lesson.exemple}}/p>
        <a href="#" class="btn btn-primary">{{lesson.audio}}</a>
      </div>
    </div>
  </div>
{% endfor %}
<a href="{{path('show_exercice',{id:id})}}" class="btn btn-primary">exercice</a>
</div>
{% endblock body %}