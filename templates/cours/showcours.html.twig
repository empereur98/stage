{% extends "base.html.twig" %}
{% block body %}
<h2>lesson:{{slug}}</h2>
<div class="row">
{% for lesson in lessons %}
  <div class="col-4">
    <div class="card w-100 d-inline-block">
      <div class="card-body">
        <h2 class="card-title">{{lesson.mot}}</h2>
        <p class="card-text"><small class="text-muted">{{lesson.traduction}}</small></p>
        <p class="card-text">{% if lesson.filename %}
          <audio controls class="w-100">
              <source src="/audio/properties/{{lesson.filename}}" type="audio/mpeg">
              <p>
                  Votre navigateur ne prend pas en charge l'audio HTML5. Voici un
                  <a href="/audio/properties/{{lesson.filename}}">lien vers le fichier audio</a> Ã  la place.
                </p>
            </audio>
  {% endif %}</p>
        <a href="#" class="btn btn-primary">{{lesson.exemple}}</a>
      </div>
    </div>
  </div>
{% endfor %}
<a href="{{path('show_exercice',{id:id})}}" class="btn btn-primary">exercice</a>
</div>
{% endblock body %}