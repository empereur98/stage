{% extends "base.html.twig" %}
{% block body %}
        <div class="row mt-4">
            <div class="col-8">
<h3>choississez votre cours</h3>
                {% for row in cours %}
                <div class="card mb-3 d-inline-block m-4" style="max-width: 300px;">
                    <div class="row g-0">
                      <div class="col-md-4">
                        <img src="../images/christian-koch-D_4R9CcYZOk-unsplash.jpg" class="img-fluid rounded-start" alt="...">
                      </div>
                      <div class="col-md-8">
                        <div class="card-body">
                          <h5 class="card-title">{{row.titre}}</h5>
                          <p class="card-text mb-3"><small class="text-muted">{{row.niveau}}</small></p>
                          <p class="card-text">{{row.description}}</p>
                          <a href="{{path('show_lesson',{id:row.id,slug:row.titre,niveau:row.niveau})}}" class="btn btn-primary text-end">suivre le cours</a>
                        </div>
                      </div>
                    </div>
                  </div>
                {% endfor %}
            </div>
            <div class="col-4 bg-secondary">

            </div>
        </div>
{% endblock body %}